{
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es2023",
        "outDir": "./bin",
        "lib": [
            "dom",
            "dom.iterable",
            "es2023"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.json",
        "./**/*.feature"
    ],
    "exclude": [
        "cucumber.json",
        "package.json",
        "package-lock.json",
        "tsconfig.json"
    ]
}